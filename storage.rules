rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /cv/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /projects/{projectId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
